<div class='reminder-list-container'>
  {{#if model}}
    <h1 class='reminders-title'>REMINDERS</h1>
    <div class='reminder-title-list'>
      {{#each model as |reminder|}}
        <div class='reminder-container'>
        <div class='spec-reminder-item' >
          <p class='reminder-status {{if reminder.hasDirtyAttributes "tay-tay"}}'>â˜‘</p>
          {{#link-to 'reminders.reminder' reminder.id}}
              <h3 class='spec-reminder-title'>{{reminder.title}}</h3>
          {{/link-to}}
        </div>
        {{#link-to 'reminders'}}
          {{delete-reminder model=reminder}}
        {{/link-to}}
      </div>
      {{/each}}
    </div>
    {{else}}
      <h3 class='no-reminder-message'>Click below to add a new reminder.</h3>
    {{/if}}

    {{#link-to 'reminders.new'}}
      <button class='addNew-btn btn'>Add New Reminder</button>
    {{/link-to}}
  </div>

  <div class='display-container'>
    {{outlet}}
  </div>
